@import "../../node_modules/kouto-swiss/"
normalize()

@import "./config/*"
@import "./components/*"

body
    color: $text-color
    font-family: 'Open Sans', sans-serif;

    button
        cursor: pointer
        font-family: 'Open Sans', sans-serif;

        &:focus
            outline: 0

.content
    margin: 0 auto
    padding-top: 65px

    +media-query( screen, min-width 480px )
        max-width: 480px

    +media-query( screen, min-width 720px )
        max-width: 720px
    
    +media-query( screen, min-width 960px )
        max-width: 960px