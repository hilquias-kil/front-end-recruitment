.cart-product
    display: flex
    padding: 20px
    position: relative

    &:before
        display: block
        content: ""
        height: 2px 
        background: #000000
        position: absolute
        width: calc(unquote('100% - 40px'))
        left: 50%
        top: -1px
        transform: translateX(-50%)

    .holder
        margin-left: 20px
        position: relative
        flex-grow: 1

    .name
        color: #fff
        font-size: 14px
        display: block
        margin: 0 25px 5px 0
    
    .row
        display: flex
        justify-content: space-between

    .property,
    .amount
        display: block
        font-size: 12px
        color: #7f7f7f
        margin: 0 0 5px

    .price
        font-size: 14px
        color: #ecbf04

    .remove
        padding: 0
        font-size: 0
        background: none
        border: none
        position: absolute
        right: 0
        top: 0

        svg
            width: 18px
            height: 18px

            path
                fill: #000