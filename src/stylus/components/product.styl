.product
    text-align: center
    max-width 240px
    padding: 20px
    box-sizing: border-box
    position: relative

    .free-shipping
        background-color: #ebbe00
        font-size: 10px
        color: #fff
        padding: 5px
        display: inline-block
        position: absolute
        right: 0
        top: 0

    .img-holder
        width: 180px
        height: 230px
        margin: 0 auto 10px
        position: relative
    
    .name 
        display: block
        margin-bottom: 15px
        font-size: 14px

    .price
        display: block
        font-size: 12px
        position: relative

        &:before
            content: ""
            display: inline-block
            width: 15px
            height: 2px
            background-color: #ebbe00
            position: absolute
            left 50%
            top: -5px
            transform: translateX(-50%)

        span
            font-size: 24px
            font-weight: bold

    .installments
        display: block
        font-size: 12px
        color: #9e9e9e

    .select
        margin: 15px 0 10px
        border: 1px solid #ccc
        display: inline-block
        position: relative
        border-radius: 3px

        &:before
            content: ""
            triangle( down, 6px, black )
            right: 10px
            top: 50%
            position: absolute
            transform: translateY(-3px)

        select
            font-size: 12px
            appearance: none
            border: none
            padding: 10px
            padding-right: 32px;

    .add-cart
        background-color: #000000
        color: #fff
        border: none
        padding: 10px 20px
        font-size: 12px
        text-transform: uppercase
        font-weight: bold