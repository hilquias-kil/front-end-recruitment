.product
    text-align: center
    max-width 240px
    padding: 20px
    box-sizing: border-box

    .img-holder
        width: 180px
        height: 230px
        margin: 0 auto 10px
    
    .name 
        display: block
        margin-bottom: 15px
        font-size: 14px

    .price
        display: block
        font-size: 12px
        position: relative

        &:before
            content: ""
            display: inline-block
            width: 15px
            height: 2px
            background-color: #ebbe00
            position: absolute
            left 50%
            top: -5px
            transform: translateX(-50%)

        span
            font-size: 24px
            font-weight: bold

    .installments
        display: block
        font-size: 12px
        color: #9e9e9e
        margin: 0 0 15px

    .add-cart
        background-color: #000000
        color: #fff
        border: none
        padding: 10px 20px
        font-size: 12px
        text-transform: uppercase
        font-weight: bold