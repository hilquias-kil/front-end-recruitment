.header
    background-color: #fff
    width: 100%
    display: flex
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.5)
    justify-content: flex-end
    position: fixed
    z-index: 2

    &.open
        height: 100%
        background: #1b1a21
        display: block
        z-index 2
        max-width: 520px
        top: 0
        right: 0

        .cart-button
            margin: 40px auto
            &:after
                display: inline-block
                vertical-align: middle
                content: "Sacola"
                color: #fff
                text-transform: uppercase
                font-size: 24px
                margin-left: 5px

            svg
                display: inline-block
                vertical-align: middle

                path
                    fill: #fff

        .cart
            display: block

        .close
            display: block
            background: none
            padding: 0
            font-size: 0
            border: none
            position: absolute
            left: 20px
            top: 20px

            svg
                width: 30px
                height: 30px

                path
                    fill: #fff

    .close
        display: none

    .cart-button
        display: block
        margin: 10px
        padding: 0
        border: none
        background: none
        position: relative
        font-size: 12px
        line-height: 18px
        text-align: center
        font-weight: bold

        &:before
            content: attr(data-number)
            display: inline-block
            background-color: #edbd01
            width: 18px
            height: 18px
            position: absolute
            left: -5px
            bottom: -5px
            border-radius: 50%

        svg
            width: 40px
            height: 40px

    .cart
        display: none

        .cart-product-list
            margin: 0
            padding: 0
            list-style: none  